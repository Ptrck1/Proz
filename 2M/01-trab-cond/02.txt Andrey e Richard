ValorPagar: real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
 escreval ("Seja Bem-vindo a Barber D'Crias.")
 escreva ("ValorDoProdutoCorte: ")
 leia (ValorDoProdutoCorte)
  escreva ("ValorDoProdutoBarba: ")
 leia (ValorDoProdutoBarba)
 escreva ("ValorDoDesconto: ")
 leia (ValorDoDesconto)
 CalculoDoDesconto <- ValorDoProdutoBarba + ValorDoProdutoCorte * ValorDoDesconto / 100
 ValorPagar <- ValorDoProdutoBarba + ValorDoProdutoCorte - CalculoDoDesconto
 escreval ("O valor total a pagar: ",ValorPagar)

